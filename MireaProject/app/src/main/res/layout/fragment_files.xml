<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F5F5F5"
    android:gravity="center">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Работа с файлами"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginBottom="32dp" />

    <TextView
        android:id="@+id/selectedFileTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Файл не выбран"
        android:textSize="16sp"
        android:textAlignment="center"
        android:layout_marginBottom="24dp"
        android:padding="12dp"
        android:background="#E3F2FD" />

    <Button
        android:id="@+id/selectFileButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Выбрать файл"
        android:layout_marginBottom="32dp"
        android:background="#2196F3"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Выберите операцию:"
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    <Spinner
        android:id="@+id/operationSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp" />

    <ProgressBar
        android:id="@+id/fileOperationProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/fileOperationStatusTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="14sp"
        android:textAlignment="center"
        android:visibility="gone"
        android:layout_marginBottom="24dp" />

    <Button
        android:id="@+id/executeButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Выполнить операцию"
        android:enabled="false"
        android:background="#4CAF50"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

</LinearLayout>