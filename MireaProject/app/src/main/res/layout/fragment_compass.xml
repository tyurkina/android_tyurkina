<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".CompassFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Компас и определение севера"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginBottom="24dp" />

    <FrameLayout
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginBottom="24dp"
        android:background="#F0F0F0">

        <ImageView
            android:id="@+id/compassNeedle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@android:drawable/arrow_up_float"
            android:rotation="0" />

        <TextView
            android:id="@+id/directionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:layout_marginBottom="16dp"
            android:text="N"
            android:textSize="32sp"
            android:textStyle="bold" />

    </FrameLayout>

    <TextView
        android:id="@+id/azimuthTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Азимут: 0°"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/directionInfoTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Направление: Север"
        android:textSize="16sp"
        android:textAlignment="center"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/sensorStatusTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Статус датчика: Ожидание..."
        android:textSize="14sp"
        android:textAlignment="center"
        android:layout_marginBottom="24dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Советы по определению севера:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/tipsTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="• По солнцу: утром солнце на востоке, в полдень - на юге\n• По мху: мох растет с северной стороны деревьев\n• По звездам: Полярная звезда указывает на север"
        android:textSize="14sp"
        android:lineSpacingExtra="4dp"
        android:layout_marginBottom="24dp" />

    <Button
        android:id="@+id/calibrateButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Калибровать компас"
        android:textSize="16sp" />

</LinearLayout>